<cs:StackItem x:Class="CapgeminiSurface.ProjectItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cs="clr-namespace:CapgeminiSurface"
    xmlns:resource="clr-namespace:CapgeminiSurface.Resources"
    Height="350" Width="300">
    <Grid>
        <Grid Name="projectGrid" Background="Aqua">
            <TextBlock Name="projectName" 
                       Height="23" 
                       HorizontalAlignment="Left" 
                       Margin="12,12,0,0" 
                       VerticalAlignment="Top" 
                       Width="276" 
                       FontWeight="Bold" 
                       Foreground="Black" 
                       Text="{Binding Name}"/>
            <TextBlock Name="projectDescription" 
                       Height="247" 
                       HorizontalAlignment="Left" 
                       Margin="12,41,0,0" 
                       VerticalAlignment="Top" 
                       Width="276" 
                       ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                       Foreground="Black" 
                       Text="{Binding Description}" />
        </Grid>
    </Grid>
</cs:StackItem>
