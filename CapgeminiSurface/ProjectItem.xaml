<cs:StackItem x:Class="CapgeminiSurface.ProjectItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:cs="clr-namespace:CapgeminiSurface"
    xmlns:resource="clr-namespace:CapgeminiSurface.Resources"
    Width="200" Height="300">
    <Grid>
        <Grid Name="projectGrid" Background="Aqua">
            <TextBlock Name="projectName"  
                       HorizontalAlignment="Left" 
                       Margin="12,12,0,0" 
                       VerticalAlignment="Top" 
                       FontWeight="Bold" 
                       Foreground="Black" 
                       Text="{Binding Name}"/>
			<TextBlock Name="projectDescription" 
                       HorizontalAlignment="Left" 
                       Margin="12,41,0,0" 
                       VerticalAlignment="Top" 
                       ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                       Foreground="Black" 
                       Text="{Binding Description}" />
		</Grid>
    </Grid>
</cs:StackItem>