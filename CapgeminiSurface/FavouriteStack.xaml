<UserControl x:Class="CapgeminiSurface.FavouriteStack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cs="clr-namespace:CapgeminiSurface"
    xmlns:resource="clr-namespace:CapgeminiSurface.Resources"
    HorizontalAlignment="Stretch" 
    VerticalAlignment="Stretch" 
    Initialized="SurfaceStack_Initialized">
    <Grid 
        x:Name="FavouriteGrid">
        <Grid.Resources>
            <DataTemplate x:Key="StackItemTemplate">
                <cs:ProjectItem DataContext="{Binding}"/>
            </DataTemplate>

            <Style x:Key="StackItemContainerStyle" TargetType="{x:Type s:LibraryStackItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type s:LibraryStackItem}">
                            <Border 
                                Background="White" 
                                BorderBrush="White" 
                                BorderThickness="3" 
                                Height="145.62"
                                Width="90"
                                CornerRadius="5">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        
        <s:LibraryContainer Name="favouriteStackContent" Margin="0,0,-300,-300" Width="300" Height="300">
            <s:LibraryContainer.StackView>
                <s:StackView ItemTemplate="{StaticResource StackItemTemplate}" 
                             ItemContainerStyle="{StaticResource StackItemContainerStyle}">
                </s:StackView>
            </s:LibraryContainer.StackView>
        </s:LibraryContainer>
    </Grid>
</UserControl>